<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView android:id="@+id/list_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/nav_bg"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_inputamt_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Input Param:"
            android:textSize="20sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.54"
                android:text="password type(A/B)" />

            <EditText
                android:id="@+id/et_password_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="none" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textViewPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.54"
                android:text="password(6bytes)" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="none" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/blkNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="Block No.(0-63)" />

            <EditText
                android:id="@+id/et_block_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="none" >

                <requestFocus />
            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/blkValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="Block value(16 bytes)" />

            <EditText
                android:id="@+id/et_block_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="none" >

                <requestFocus />
            </EditText>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_all"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Test all" />
        <Button
            android:id="@+id/btn_read"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Read" />
        <Button
            android:id="@+id/btn_write"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Write" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_decreament"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Decreament" />

        <Button
            android:id="@+id/btn_increament"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Increament" />

        <Button
            android:id="@+id/btn_activate"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Activate Card" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_charge"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Charge" />


        <Button
            android:id="@+id/btn_balnce"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Balance" />

        <Button
            android:id="@+id/btn_createValue"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Create Value" />

    </LinearLayout>


    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/decreament_btn" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textViewBase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading...." />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_signature"/>
        </LinearLayout>


    </ScrollView>

</LinearLayout>
